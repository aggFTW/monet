<%= simple_form_for(@charge) do |f| %>
	<fieldset>

  		<%= f.input :name, :label => 'Descripción' %>

  		<%= label_tag "tag1", "Fecha Límite:" %>
		<%= text_field nil, nil, {:class => 'date_picker', :id => "charge_datedue", :name => 'charge[datedue]', :required => 'required'} %>

  		<%= f.input :amount, :label => 'Cantidad' %>

  		<%= f.input :ctype, 
			:collection => [['Inscripcion', 'Inscripcion'], ['Colegiatura', 'Colegiatura'], ['Exposicion', 'Exposicion'], ['Material', 'Material'], ['Otro', 'Otro']],
			:as => :radio,
			:label => 'Tipo',
			:item_wrapper_class => 'inline'%>

		<%= f.input :student_ids, as: :check_boxes, collection: Student.all.collect {|x| [x.personName, x.id]}, :label => 'Estudiantes:' %>

		<div class="control-group">
			<div class="controls">
				<%= f.button :submit %>
			</div>
		</div>
	</fieldset>
<% end %>