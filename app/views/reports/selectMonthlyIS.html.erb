<script>
function displayDate()
{
	window.location.href = "/incomestatementmonth/" + document.getElementById("month").value;
}
</script>



<h1>Seleccionar mes para el estado de resultados</h1>

<%= select_tag 'month', options_for_select([\
	['Septiembre', '9'],\
	['Octubre', '10'],\
	['Noviembre', '11'],\
	['Diciembre', '12'],\
	['Enero', '1'],\
	['Febrero', '2'],\
	['Marzo', '3'],\
	['Abril', '4'],\
	['Mayo', '5'],\
	['Junio', '6'],\
	['Julio', '7'],\
	['Agosto', '8']])%>
<br />
<button type="button" onclick="displayDate()">Estado de resultados</button>